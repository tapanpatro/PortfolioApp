<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/gradient_side_menu"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_main_home"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <ImageView
                android:src="@drawable/ic_filter_hdr_black_24dp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:layout_width="60dp"
                android:layout_height="match_parent" />

            <TextView
                android:textSize="30sp"
                android:textColor="#fff"
                android:textAlignment="textStart"
                android:text="Home"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_profile"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:src="@drawable/ic_face_black_24dp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:layout_width="60dp"
                android:layout_height="match_parent"  />

            <TextView
                android:textSize="30sp"
                android:textColor="#fff"
                android:textAlignment="textStart"
                android:text="Profile"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_portfolio"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:src="@drawable/ic_grain_black_24dp" />

            <TextView
                android:textSize="30sp"
                android:textColor="#fff"
                android:textAlignment="textStart"
                android:text="Portfolio"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_hireme"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:src="@drawable/ic_mood_black_24dp"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:layout_width="60dp"
                android:layout_height="match_parent"  />

            <TextView
                android:textSize="30sp"
                android:textColor="#fff"
                android:textAlignment="textStart"
                android:text="HireMe"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

    </ScrollView>

</LinearLayout>