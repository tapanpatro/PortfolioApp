<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.omniroid.tapan.portfolioapp.view.fragment.PortfolioFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="25dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card_wedding"
                app:cardElevation="10dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#403d3d"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <TextView
                    android:drawableLeft="@drawable/ic_face_black_24dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textSize="35sp"
                    android:textColor="#FFF"
                    android:text="  Wedding"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_ecomm"
                app:cardElevation="10dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#403d3d"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:drawableLeft="@drawable/ic_shopping_cart_black_24dp"
                    android:text="  ECommerce"
                    android:textAlignment="center"
                    android:textColor="#FFF"
                    android:textSize="35sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_freelance"
                app:cardElevation="10dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#403d3d"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <TextView
                    android:drawableLeft="@drawable/ic_extension_black_24dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textSize="35sp"
                    android:textColor="#FFF"
                    android:text="  Freelance"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_other"
                app:cardElevation="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="90dp"
                app:cardBackgroundColor="#403d3d"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <TextView
                    android:drawableLeft="@drawable/ic_blur_on_black_24dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textSize="35sp"
                    android:textColor="#FFF"
                    android:text="  Ohter"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.CardView>



        </LinearLayout>


    </ScrollView>

</FrameLayout>
